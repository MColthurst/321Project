<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_margin="5dip">

   	<ImageView
   	    android:id="@+id/FR_picture"
   	    android:layout_width="35dip"
   	    android:layout_height="35dip"
   	    android:layout_alignParentLeft="true"
   	    android:layout_marginTop="2dip"
   	    android:scaleType="fitXY"
   	    android:src="@drawable/defaultmedium" />

	<TextView
	    android:id="@+id/FR_uname"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@id/FR_picture"
	    android:layout_marginLeft="5dip"
	    android:lines="1"
	    android:text="uname"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#999999">

	</TextView>

	<TextView
	    android:id="@+id/FR_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/FR_uname"
	    android:layout_below="@+id/FR_uname"
	    android:text="Plain Name"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#505050"
	    android:textSize="14dip" />


</RelativeLayout>
