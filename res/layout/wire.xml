<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

                    <ListView
                        android:id="@+id/W_myPosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:layout_above="@+id/W_post">

                    </ListView>

                    <EditText
                        android:id="@+id/W_post"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_alignParentBottom="true"
                        
						android:hint="140 Characters"/>

                    <Button
                        android:id="@+id/W_button"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/W_post"
                        android:layout_alignBottom="@+id/W_post"
                        android:layout_toRightOf="@+id/W_post"
                        android:text="Submit" />

</RelativeLayout>