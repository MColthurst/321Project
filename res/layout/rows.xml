<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_margin="5dip">

	<TextView
	    android:id="@+id/R_post_name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="15dip"
	    android:layout_marginTop="5dip"
	    android:lines="1"
	    android:text="Name"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#505050"
	    android:textSize="30dip" >

</TextView>

	<TextView
	    android:id="@+id/R_post_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:text="time"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="#505050"
	    android:textSize="16dip" >

</TextView>

	<TextView
	    android:id="@+id/R_post_comment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/R_post_name"
	    android:layout_below="@+id/R_post_name"
	    android:text="comment"
	    android:textColor="#505050"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
